<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/bgpromo"
    android:layout_margin="4dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/studentImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_iaipromo"
        android:scaleType="centerCrop"
        android:contentDescription="les Images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/studentNomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Nom de l'étudiant"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/studentPrenomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Prénom de l'étudiant"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="1dp"
            />


        <TextView
            android:id="@+id/telephoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+24100000000"
            android:textStyle="bold"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="email@gmail.com"
            android:textStyle="bold"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/detailImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/detail_24"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:id="@+id/signalerImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/signal_24"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:id="@+id/mailImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/mail_24"
                android:clickable="true"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:id="@+id/whatsappImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/message_24"
                android:layout_marginRight="8dp"
                />

        </LinearLayout>

</LinearLayout>
</LinearLayout>
