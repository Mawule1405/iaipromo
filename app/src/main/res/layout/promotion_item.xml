<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/promition_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="2dp"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/promotion_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@color/bgpromo"
            android:layout_gravity="center"
            android:clickable="true"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_couverture"
                />


            <TextView
                android:id="@+id/titlePromotionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Promotion 2000 ING"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/effectifPromotionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="20 étudiants"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/descriptionPromotionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La description de la promotion"
                android:paddingHorizontal="8dp"
                />

            <Button
                android:id="@+id/promotionDetailBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir plus"
                android:textSize="12dp"
                android:layout_marginHorizontal="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotion_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:background="@color/bgpromo"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_couverture"
                />


            <TextView
                android:id="@+id/titlePromotionTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Promotion 2000 ING"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/effectifPromotionTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="20 étudiants"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/descriptionPromotionTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La description de la promotion"
                android:paddingHorizontal="8dp"
                />

            <Button
                android:id="@+id/promotionDetailBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir plus"
                android:textSize="12dp"
                android:layout_marginHorizontal="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
